        <script><![CDATA[(function executeRule(current) {
	// Inicialize a duração total
	var totalDuration = 0;

	// Realize a consulta nos registros relacionados
	var gr = new GlideRecord('x_1588110_mock_s_0_course');
	gr.addQuery('path', current.path);
	gr.query();

	// Agregue as durações
	while (gr.next()) {
		if (gr.duration) {
			var durGr = gr.duration.dateNumericValue();
			gs.info(gr.training + ' dur.dateNumericValue() ' + durGr);
			totalDuration += durGr;
		}
	}

	var pathGr = new GlideRecord('x_1588110_mock_s_0_path');
	pathGr.get('sys_id', current.path);

	if (pathGr) {
		pathGr.duration = new GlideDuration(totalDuration);
		pathGr.update();
	}
})(current);
]]></script>
